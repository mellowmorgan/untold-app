<div id="published-requests-section">
  <% if requests_published.any? %>
   
    <% requests_published.each do |request| %>
      <%= link_to request_path(request) do %>
        <div class="published-request">
          <h3><%= request.content %></h3>
          <% end %>
          <% if request.image.attached? %>
          <%= image_tag request.image, :class=>"request-answered-image-home" %>
          <% end %>
         
          <div class="answer-home" style="text-decoration:none !important">
            <%= request.descriptions.order(created_at: :desc).first.content %>
          </div>
            
        </div>
      
    <% end %>

  <% else %>
  <p>No requests found.</p>
<% end %>
</div>
