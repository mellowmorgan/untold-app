<div class="my-container">
<div class="row home-row">
<div class="col-md-2 left-col">
<%= render 'layouts/sidebar_menu' %>
</div>
<div class="col-md-6">

<div class="add-request">
<div class="add-request-title-box">Add a Request</div>

<div class="add-request-form">
  <%= form_with(url: "/api/v1/requests", method: :post, model: @request) do |f| %>
    <div class="form-group">
    <%= f.label "Request:" %><br />
    <%= f.text_area :content, :class => 'form-control', 
    placeholder:"What does fire look like?" %><br />
    <%= f.label "Tags (optional):" %><br />
    <%= f.text_field :categories, :class => 'form-control', placeholder:"Example: miscellaneous, nature" %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :status, :value => "approved" %>
    </div>
    
    <div>
    <%= f.submit "Post", :class => "btn btn-light" %>
  </div>
  <% end %>
</div>
</div>

  
<%= render partial: 'layouts/published_posts', locals: { requests_published: @requests_published} %>
<%= link_to "View all answered requests", requests_answered_path %>



</div>
<div class="col-md-4">
<div class="open-requests-section-home">
<div class="open-request-title-box">Add a Request</div>
<div class="open-request-list">
<% if @requests_approved.any? %>
  <% @requests_approved.each do |request| %>
    <div class="open-request"><h4><%= request.content %></h4> 
    <div><button class="btn btn-light">Answer</button></div>
    <div>thumbs up | 25 | report</div></div>
    
  <% end %>
<% end %>
<%= link_to "View all open requests", requests_open_path %>
</div>
</div>
</div>
</div>





